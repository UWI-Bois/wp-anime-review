# ignore these directories and files in "public"
public/wp-admin
public/wp-includes
public/*.*

# track everything in the "public/wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
!public/wp-content/mu-plugins/
!public/wp-content/plugins/

# ignore all themes
public/wp-content/themes/*

# but track newsup derivatives
!public/wp-content/themes/newsup*

# ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite

# track some root files
!Project-INFO3603.pdf
!README.md

# ignore idea folder
.idea/

# ???? consider tracking the entire plugins directory
public/wp-content/cache/*
public/wp-content/plugins/sg-cachepress/*
public/wp-content/plugins/wordpress-starter/*
public/wp-content/w3tc-config/*
